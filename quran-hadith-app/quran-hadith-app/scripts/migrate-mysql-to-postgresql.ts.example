    console.log('\nðŸŽ‰ Migration completed successfully!');

  } catch (error) {
    console.error('âŒ Migration failed:', error);
    throw error;
  } finally {
    await mysqlClient.$disconnect();
    await postgresClient.$disconnect();
  }
}

// Run migration
migrate()
